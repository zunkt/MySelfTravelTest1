<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/img_manage_menu_user" />

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:layout_weight="9.2"
                android:text="ID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_manage_user_idDiaDiem" />

        </LinearLayout>
        <TextView
            android:layout_marginTop="2dp"
            android:text="TÃªn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_manage_user_tenDiaDiem" />

        <TextView
            android:layout_marginTop="2dp"
            android:text="PhuongTienDiToi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_manage_user_phuongtienditoi" />

        <Button
            android:textStyle="bold"
            android:text="Do An Dac San"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_manage_user_DoAn" />
        <Button
            android:textStyle="bold"
            android:text="Dia Diem Du Lich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_manage_user_diadiemdulich" />
    </LinearLayout>
</LinearLayout>