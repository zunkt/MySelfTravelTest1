<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:text="Add Dia Diem"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        app:errorEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID">
        <com.google.android.material.textfield.TextInputEditText
            android:inputType="number"
            android:maxLength="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txd_add_diadiem_id"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        app:errorEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ten Dia Diem">
        <com.google.android.material.textfield.TextInputEditText
            android:inputType="text"
            android:maxLength="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_add_diadiem_name"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        app:errorEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phuong tien di toi">
        <com.google.android.material.textfield.TextInputEditText
            android:inputType="text"
            android:maxLength="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_add_diadiem_phuongtienditoi"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:weightSum="8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            app:errorEnabled="true"
            android:id="@+id/img_manage_menu_add_admin"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="150dp"/>
        <LinearLayout
            android:padding="7dp"
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_choose_image_diadiem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHOOSE"
                android:textStyle="bold">

            </Button>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:background="#848B8F"
        android:text="SAVE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_menu_save"/>

</LinearLayout>